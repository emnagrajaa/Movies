@model AspCoreFirstApp.Models.Customer

@{
    ViewData["Title"] = "Détails du client";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-info text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-info-circle-fill me-2"></i>Détails du client
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded mb-3">
                                <small class="text-muted d-block mb-1">
                                    <i class="bi bi-hash me-1"></i>Identifiant
                                </small>
                                <h5 class="mb-0 fw-bold text-primary">@Model.Id</h5>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded mb-3">
                                <small class="text-muted d-block mb-1">
                                    <i class="bi bi-person me-1"></i>Nom complet
                                </small>
                                <h5 class="mb-0 fw-bold">@Model.Name</h5>
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded mb-3">
                                <small class="text-muted d-block mb-2">
                                    <i class="bi bi-award me-1"></i>Type d'abonnement
                                </small>
                                @{
                                    var badgeClass = Model.MembershipName switch {
                                        "Gold" => "bg-warning text-dark",
                                        "Silver" => "bg-secondary",
                                        "Bronze" => "bg-danger",
                                        _ => "bg-dark"
                                    };
                                }
                                <span class="badge @badgeClass fs-5 px-3 py-2">
                                    @Model.MembershipName
                                </span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="p-3 bg-light rounded mb-3">
                                <small class="text-muted d-block mb-2">
                                    <i class="bi bi-percent me-1"></i>Taux de remise
                                </small>
                                <span class="badge bg-success fs-5 px-3 py-2">
                                    @Model.DiscountRate%
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-2 justify-content-end pt-3 border-top">
                        <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left me-1"></i>Retour à la liste
                        </a>
                        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-outline-danger btn-lg">
                            <i class="bi bi-trash me-1"></i>Supprimer
                        </a>
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary btn-lg">
                            <i class="bi bi-pencil-square me-1"></i>Modifier
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}