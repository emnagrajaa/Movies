@model AspCoreFirstApp.Models.Customer

@{
    ViewData["Title"] = "Modifier le client";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm">
                <div class="card-header bg-warning text-dark">
                    <h4 class="mb-0">
                        <i class="bi bi-pencil-square me-2"></i>Modifier le client
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-info d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-info-circle-fill me-2"></i>
                        <div>
                            <small>ID du client : <strong>@Model.Id</strong></small>
                        </div>
                    </div>

                    <form asp-action="Edit" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="mb-4">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="bi bi-person me-1"></i>Nom du client
                            </label>
                            <input asp-for="Name" class="form-control form-control-lg" placeholder="Entrez le nom complet" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="mb-4">
                            <label asp-for="MembershipName" class="form-label fw-semibold">
                                <i class="bi bi-award me-1"></i>Type d'abonnement
                            </label>
                            <select asp-for="MembershipName" class="form-select form-select-lg"
                                asp-items="@(new SelectList(new List<string> { "Bronze", "Silver", "Gold" }, Model.MembershipName))">
                                <option value="">-- Sélectionnez un type --</option>
                            </select>
                            <span asp-validation-for="MembershipName" class="text-danger small"></span>
                            <div class="form-text">
                                <span class="badge bg-danger me-1">Bronze</span>
                                <span class="badge bg-secondary me-1">Silver</span>
                                <span class="badge bg-warning text-dark">Gold</span>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label asp-for="DiscountRate" class="form-label fw-semibold">
                                <i class="bi bi-percent me-1"></i>Taux de remise (%)
                            </label>
                            <input asp-for="DiscountRate" class="form-control form-control-lg" type="number" step="0.01" min="0" max="100" />
                            <span asp-validation-for="DiscountRate" class="text-danger small"></span>
                            <div class="form-text">Entrez un pourcentage entre 0 et 100</div>
                        </div>

                        <div class="d-flex gap-2 justify-content-end mt-4 pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-x-circle me-1"></i>Annuler
                            </a>
                            <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-info btn-lg">
                                <i class="bi bi-eye me-1"></i>Voir détails
                            </a>
                            <button type="submit" class="btn btn-warning btn-lg text-dark">
                                <i class="bi bi-check-circle me-1"></i>Enregistrer les modifications
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}