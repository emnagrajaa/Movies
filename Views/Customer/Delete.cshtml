@model AspCoreFirstApp.Models.Customer

@{
    ViewData["Title"] = "Supprimer le client";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-sm border-danger">
                <div class="card-header bg-danger text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-exclamation-triangle-fill me-2"></i>Confirmation de suppression
                    </h4>
                </div>
                <div class="card-body p-4">
                    <div class="alert alert-danger d-flex align-items-center mb-4" role="alert">
                        <i class="bi bi-exclamation-circle-fill fs-4 me-3"></i>
                        <div>
                            <strong>Attention !</strong> Cette action est irréversible. Êtes-vous sûr de vouloir supprimer ce client ?
                        </div>
                    </div>

                    <div class="bg-light rounded p-4 mb-4">
                        <h5 class="text-muted mb-3">Informations du client</h5>
                        <dl class="row mb-0">
                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-hash me-1"></i>ID
                            </dt>
                            <dd class="col-sm-8 fw-semibold">@Model.Id</dd>

                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-person me-1"></i>Nom
                            </dt>
                            <dd class="col-sm-8 fw-semibold">@Model.Name</dd>

                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-award me-1"></i>Type d'abonnement
                            </dt>
                            <dd class="col-sm-8">
                                <span class="badge bg-secondary fs-6">@Model.MembershipName</span>
                            </dd>

                            <dt class="col-sm-4 text-muted">
                                <i class="bi bi-percent me-1"></i>Taux de remise
                            </dt>
                            <dd class="col-sm-8 mb-0">
                                <span class="badge bg-info text-dark fs-6">@Model.DiscountRate%</span>
                            </dd>
                        </dl>
                    </div>

                    <form asp-action="Delete" method="post">
                        <input type="hidden" asp-for="Id" />
                        <div class="d-flex gap-2 justify-content-end pt-3 border-top">
                            <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                                <i class="bi bi-arrow-left me-1"></i>Annuler
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-trash-fill me-1"></i>Confirmer la suppression
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
}