@{
    ViewData["Title"] = "Accueil";
}

<div class="container mt-5">
    <!-- Header Section -->
    <div class="text-center mb-5">
        <div class="mb-4">
            <i class="bi bi-film display-1 text-primary"></i>
        </div>
        <h1 class="display-4 fw-bold mb-3">Bienvenue sur MovieApp</h1>
        <p class="lead text-muted">Gérez facilement vos films, clients et genres</p>
    </div>

    <!-- Cards Section -->
    <div class="row g-4 mb-5">
        
        <!-- Customers Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-lg hover-lift">
                <div class="card-header bg-gradient-primary text-white text-center py-4">
                    <i class="bi bi-people-fill display-4 mb-3"></i>
                    <h4 class="mb-0 fw-bold">Clients</h4>
                </div>
                <div class="card-body p-4">
                    <p class="card-text text-muted mb-4">
                        Gérez votre base de clients et leurs abonnements. Suivez les informations importantes et les remises accordées.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Customer" asp-action="Index" class="btn btn-primary btn-lg">
                            <i class="bi bi-list-ul me-2"></i>Voir tous les clients
                        </a>
                        <a asp-controller="Customer" asp-action="Create" class="btn btn-outline-primary">
                            <i class="bi bi-person-plus me-2"></i>Ajouter un client
                        </a>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>Gestion complète des profils
                    </small>
                </div>
            </div>
        </div>

        <!-- Movies Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-lg hover-lift">
                <div class="card-header bg-gradient-danger text-white text-center py-4">
                    <i class="bi bi-camera-reels-fill display-4 mb-3"></i>
                    <h4 class="mb-0 fw-bold">Films</h4>
                </div>
                <div class="card-body p-4">
                    <p class="card-text text-muted mb-4">
                        Explorez et enrichissez votre catalogue de films. Ajoutez de nouveaux titres et organisez votre collection.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Movie" asp-action="Index" class="btn btn-danger btn-lg">
                            <i class="bi bi-film me-2"></i>Voir tous les films
                        </a>
                        <a asp-controller="Movie" asp-action="Create" class="btn btn-outline-danger">
                            <i class="bi bi-plus-circle me-2"></i>Ajouter un film
                        </a>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>Catalogue complet de films
                    </small>
                </div>
            </div>
        </div>

        <!-- Genres Card -->
        <div class="col-lg-4 col-md-6">
            <div class="card h-100 border-0 shadow-lg hover-lift">
                <div class="card-header bg-gradient-success text-white text-center py-4">
                    <i class="bi bi-tags-fill display-4 mb-3"></i>
                    <h4 class="mb-0 fw-bold">Genres</h4>
                </div>
                <div class="card-body p-4">
                    <p class="card-text text-muted mb-4">
                        Consultez et organisez les différents genres de films disponibles dans votre bibliothèque multimédia.
                    </p>
                    <div class="d-grid gap-2">
                        <a asp-controller="Genre" asp-action="Index" class="btn btn-success btn-lg">
                            <i class="bi bi-grid-3x3-gap me-2"></i>Voir tous les genres
                        </a>
                        <a asp-controller="Genre" asp-action="Create" class="btn btn-outline-success">
                            <i class="bi bi-plus-circle me-2"></i>Ajouter un genre
                        </a>
                    </div>
                </div>
                <div class="card-footer bg-transparent border-0 text-center py-3">
                    <small class="text-muted">
                        <i class="bi bi-info-circle me-1"></i>Classification par catégories
                    </small>
                </div>
            </div>
        </div>

    </div>

    <!-- Quick Stats Section (Optional) -->
    <div class="row g-4 mb-5">
        <div class="col-12">
            <div class="card border-0 shadow-sm bg-light">
                <div class="card-body p-4">
                    <div class="row text-center">
                        <div class="col-md-4 mb-3 mb-md-0">
                            <i class="bi bi-speedometer2 text-primary fs-1 mb-2"></i>
                            <h5 class="fw-bold">Rapide</h5>
                            <p class="text-muted small mb-0">Interface intuitive et réactive</p>
                        </div>
                        <div class="col-md-4 mb-3 mb-md-0">
                            <i class="bi bi-shield-check text-success fs-1 mb-2"></i>
                            <h5 class="fw-bold">Sécurisé</h5>
                            <p class="text-muted small mb-0">Protection des données garantie</p>
                        </div>
                        <div class="col-md-4">
                            <i class="bi bi-graph-up-arrow text-danger fs-1 mb-2"></i>
                            <h5 class="fw-bold">Efficace</h5>
                            <p class="text-muted small mb-0">Gestion optimisée de votre contenu</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>

@section Styles {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        /* Gradient Backgrounds */
        .bg-gradient-primary {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        }
        
        .bg-gradient-danger {
            background: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
        }
        
        .bg-gradient-success {
            background: linear-gradient(135deg, #4facfe 0%, #00f2fe 100%);
        }

        /* Hover Effect */
        .hover-lift {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .hover-lift:hover {
            transform: translateY(-10px);
            box-shadow: 0 1rem 3rem rgba(0, 0, 0, 0.175) !important;
        }

        /* Card Header Icons */
        .card-header i {
            display: block;
        }

        /* Smooth transitions */
        .btn {
            transition: all 0.3s ease;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            .display-4 {
                font-size: 2rem;
            }
            
            .card-header i {
                font-size: 3rem !important;
            }
        }
    </style>
}