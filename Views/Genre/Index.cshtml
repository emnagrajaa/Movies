@model AspCoreFirstApp.ViewModels.PaginatedListViewModel<AspCoreFirstApp.Models.Genre>

@{
    ViewData["Title"] = "Liste des Genres";
    ViewBag.SortBy = Model.SortBy;
    ViewBag.SortOrder = Model.SortOrder;
}

<div class="container mt-4">
    <!-- Header Section -->
    <div class="card shadow-sm mb-4">
        <div class="card-header bg-gradient-primary text-white d-flex justify-content-between align-items-center py-3">
            <h4 class="mb-0">
                <i class="bi bi-collection-fill me-2"></i>@ViewData["Title"]
            </h4>
            <a href="@Url.Action("Create", "Genre")" class="btn btn-light btn-sm">
                <i class="bi bi-plus-circle me-1"></i>Nouveau genre
            </a>
        </div>
        <div class="card-body p-0">
            @if (Model.Items.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4 py-3" style="width: 60%;">
                                    <a href="@Url.Action("Index", "Genre", new { sortBy = "Name", sortOrder = Model.SortOrder == "asc" && Model.SortBy == "Name" ? "desc" : "asc" })" 
                                       class="text-decoration-none text-dark fw-semibold">
                                        <i class="bi bi-tag-fill me-1"></i>Nom du Genre
                                        @if (Model.SortBy == "Name")
                                        {
                                            <i class="bi @(Model.SortOrder == "asc" ? "bi-sort-alpha-down" : "bi-sort-alpha-up") ms-1 text-primary"></i>
                                        }
                                        else
                                        {
                                            <i class="bi bi-arrow-down-up ms-1 text-muted opacity-50"></i>
                                        }
                                    </a>
                                </th>
                                <th class="px-4 py-3" style="width: 20%;">
                                    <i class="bi bi-film me-1"></i>Films
                                </th>
                                <th class="px-4 py-3 text-center" style="width: 20%;">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var genre in Model.Items)
                            {
                                var badgeColor = (genre.Movies?.Count ?? 0) switch
                                {
                                    0 => "bg-secondary",
                                    > 0 and <= 5 => "bg-info",
                                    > 5 and <= 10 => "bg-primary",
                                    _ => "bg-success"
                                };

                                <tr class="align-middle">
                                    <td class="px-4 py-3">
                                        <div class="d-flex align-items-center">
                                            <div class="genre-icon me-3">
                                                <i class="bi bi-collection text-primary fs-4"></i>
                                            </div>
                                            <div>
                                                <span class="fw-semibold">@genre.Name</span>
                                            </div>
                                        </div>
                                    </td>
                                    <td class="px-4 py-3">
                                        <span class="badge @badgeColor fs-6">
                                            @(genre.Movies?.Count ?? 0) film@((genre.Movies?.Count ?? 0) > 1 ? "s" : "")
                                        </span>
                                    </td>
                                    <td class="px-4 py-3 text-center">
                                        <div class="btn-group" role="group">
                                            <a href="@Url.Action("Edit", "Genre", new { id = genre.Id })" 
                                               class="btn btn-sm btn-outline-warning" 
                                               title="Modifier">
                                                <i class="bi bi-pencil-square"></i>
                                            </a>
                                            <a href="@Url.Action("Delete", "Genre", new { id = genre.Id })" 
                                               class="btn btn-sm btn-outline-danger" 
                                               title="Supprimer">
                                                <i class="bi bi-trash-fill"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>

                <!-- Pagination -->
                <div class="card-footer bg-light border-top">
                    @await Html.PartialAsync("_Pagination", Model.Pagination)
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted mb-3"></i>
                    <h5 class="text-muted">Aucun genre disponible</h5>
                    <p class="text-muted mb-4">Commencez par créer votre premier genre de film</p>
                    <a href="@Url.Action("Create", "Genre")" class="btn btn-primary">
                        <i class="bi bi-plus-circle me-1"></i>Créer un genre
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Statistics Card -->
    @if (Model.Items.Any())
    {
        <div class="row g-3">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-collection-fill text-primary fs-1 mb-2"></i>
                        <h3 class="fw-bold mb-0">@Model.Items.Count()</h3>
                        <small class="text-muted">Genre@(Model.Items.Count() > 1 ? "s" : "") total@(Model.Items.Count() > 1 ? "aux" : "")</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-film text-success fs-1 mb-2"></i>
                        <h3 class="fw-bold mb-0">@Model.Items.Sum(g => g.Movies?.Count ?? 0)</h3>
                        <small class="text-muted">Films associés</small>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <div class="card-body text-center">
                        <i class="bi bi-bar-chart-fill text-warning fs-1 mb-2"></i>
                        <h3 class="fw-bold mb-0">@(Model.Items.Any() ? Math.Round(Model.Items.Average(g => g.Movies?.Count ?? 0), 1) : 0)</h3>
                        <small class="text-muted">Moyenne par genre</small>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .bg-gradient-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .table-hover tbody tr {
        transition: all 0.3s ease;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(102, 126, 234, 0.05);
        transform: scale(1.01);
    }

    .genre-icon {
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        background-color: rgba(102, 126, 234, 0.1);
        border-radius: 8px;
    }

    .btn-group .btn {
        border-radius: 0;
    }

    .btn-group .btn:first-child {
        border-top-left-radius: 0.25rem;
        border-bottom-left-radius: 0.25rem;
    }

    .btn-group .btn:last-child {
        border-top-right-radius: 0.25rem;
        border-bottom-right-radius: 0.25rem;
    }

    .card {
        transition: all 0.3s ease;
    }

    th a {
        transition: color 0.2s ease;
    }

    th a:hover {
        color: var(--bs-primary) !important;
    }
</style>